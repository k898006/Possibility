<h3>コメント</h3>
  <div class="p-1">
    <p>コメント数：<%= post.comments.count %>件</p>
    <% post.comments.each do |comment| %>
      <div class="p-1">
        <%= link_to comment.user.name, admin_user_path(comment.user) %>
        <%= comment.comment %>
        <%= comment.created_at.strftime('%Y/%m/%d %-H:%M') %>
        <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete %>
      </div>
    <% end %>
  </div>
</div>
