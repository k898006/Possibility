<h1><%= post.title %></h1>
<% if user_signed_in? %>
  <%= link_to user_path(@user) do %>
    <%= post.user.name %>
  <% end %>
<% elsif admin_signed_in? %>
<%= link_to admin_user_path(@user) do %>
    <%= post.user.name %>
  <% end %>
<% end %>

<% if post.images.attached? %>
  <% post.images.each do |image| %>
    <%= image_tag image, width: 200, height: 200 %>
  <% end %>
<% else %>
  <%= image_tag 'no_image.jpeg' %>
<% end %>

<h3>詳細</h3>
<%= post.caption %>



