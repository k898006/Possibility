<h1>新規投稿</h1>
<%= form_with model: @post, url: posts_path do |f| %>
  <div>
    <%= f.label :スタジアム %>
    <%= f.select :stadium_id, options_from_collection_for_select(Stadium.all, :id, :name) %>
  </div>
  <div>
    <%= f.label :画像 %>
    <%= f.file_field :images, multiple: true %>
  </div>
  <div>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :詳細 %><br>
    <%= f.text_area :caption %>
  </div>
  <div>
    <%= f.submit "作成" %>
  </div>
<% end %>
