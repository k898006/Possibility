<h2 class="text-center">投稿一覧</h2>
<div class="p-1">
  <table class="table">
    <thead>
      <tr>
        <th>ユーザーネーム</th>
        <th>タイトル</th>
        <th>コメント数</th>
        <th>いいね数</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.title %></td>
        <td><%= post.comments.count %>コメント</td>
        <td><%= post.likes.count %>いいね</td>
        <td>
          <% if user_signed_in? %>
            <%= link_to "詳細", post_path(post) %>
              <% if post.user == current_user %>
                <%= link_to "編集", edit_post_path(post) %>
                <%= link_to "削除", post_path(post), method: :delete %>
              <% elsif admin_signed_in? %>
                <%= link_to "詳細", admin_post_path(post) %>
                <%= link_to "削除", admin_post_path(post), method: :delete %>
              <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
